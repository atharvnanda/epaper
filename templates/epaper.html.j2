<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Aaj Tak Epaper — English Edition — {{ date }}</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      background: #1e1e1e;
      font-family: Georgia, 'Times New Roman', serif;
      color: #1a1a1a;
    }

    /* ── Header ── */
    .header {
      background: linear-gradient(135deg, #c0392b, #e74c3c);
      color: white;
      text-align: center;
      padding: 16px 20px;
      font-size: 20px;
      font-weight: bold;
      letter-spacing: 1px;
      position: sticky;
      top: 0;
      z-index: 100;
      box-shadow: 0 2px 12px rgba(0,0,0,0.4);
    }
    .header span {
      font-weight: normal;
      font-size: 14px;
      opacity: 0.85;
      margin-left: 14px;
    }

    /* ── Toggle button ── */
    .toggle-btn {
      position: fixed;
      top: 60px;
      right: 20px;
      z-index: 200;
      background: rgba(0,0,0,0.7);
      color: #fff;
      border: 1px solid rgba(255,255,255,0.2);
      padding: 8px 16px;
      border-radius: 20px;
      cursor: pointer;
      font-size: 13px;
      font-family: Arial, sans-serif;
      transition: all 0.2s;
      backdrop-filter: blur(6px);
    }
    .toggle-btn:hover {
      background: rgba(0,0,0,0.9);
    }

    /* ── Carousel ── */
    .carousel-wrapper {
      display: flex;
      align-items: flex-start;
      justify-content: center;
      min-height: calc(100vh - 52px);
      padding: 24px 20px;
      position: relative;
    }

    .page-slide {
      display: none;
    }
    .page-slide.active {
      display: block;
    }

    .page-container {
      position: relative;
      display: inline-block;
      box-shadow: 0 6px 30px rgba(0,0,0,0.6);
      background: white;
      max-width: 100%;
    }

    .page-container img {
      display: block;
      width: 1120px;
      max-width: 100%;
      height: auto;
    }

    /* ── Article overlay boxes (percentage-positioned) ── */
    .article-overlay {
      position: absolute;
      background: rgba(255, 252, 245, 0.94);
      overflow: hidden;
      padding: 6px 8px;
      box-sizing: border-box;
      cursor: pointer;
      border: 1px solid rgba(0,0,0,0.06);
      transition: all 0.2s ease;
      opacity: 1;
    }

    .article-overlay:hover {
      background: rgba(255, 252, 245, 1);
      box-shadow: 0 2px 16px rgba(0,0,0,0.25);
      z-index: 10;
      border-color: rgba(192, 57, 43, 0.4);
    }

    .overlays-hidden .article-overlay {
      opacity: 0;
      pointer-events: none;
    }

    .article-headline {
      font-weight: bold;
      line-height: 1.3;
      margin-bottom: 3px;
      color: #1a1a1a;
    }

    .article-body {
      line-height: 1.45;
      color: #333;
      overflow: hidden;
    }

    /* ── Navigation ── */
    .nav-btn {
      position: fixed;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(0,0,0,0.55);
      color: white;
      border: none;
      font-size: 34px;
      width: 52px;
      height: 84px;
      cursor: pointer;
      z-index: 50;
      border-radius: 6px;
      transition: background 0.2s;
      backdrop-filter: blur(4px);
    }
    .nav-btn:hover {
      background: rgba(0,0,0,0.85);
    }
    .prev-btn { left: 10px; }
    .next-btn { right: 10px; }

    /* ── Page indicator ── */
    .page-indicator {
      position: fixed;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      background: rgba(0,0,0,0.75);
      color: white;
      padding: 10px 22px;
      border-radius: 24px;
      font-size: 14px;
      z-index: 50;
      font-family: Arial, sans-serif;
      backdrop-filter: blur(6px);
    }

    .page-dots {
      display: flex;
      gap: 8px;
      align-items: center;
    }
    .page-dot {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: rgba(255,255,255,0.35);
      cursor: pointer;
      transition: all 0.2s;
    }
    .page-dot.active {
      background: white;
      transform: scale(1.3);
    }

    /* ── Page number label ── */
    .page-label {
      position: fixed;
      bottom: 60px;
      left: 50%;
      transform: translateX(-50%);
      color: rgba(255,255,255,0.6);
      font-size: 13px;
      font-family: Arial, sans-serif;
      z-index: 50;
    }

    /* ── Responsive ── */
    @media (max-width: 1200px) {
      .page-container img {
        width: 100vw;
      }
    }
  </style>
</head>
<body>

  <div class="header">
    AAJ TAK — English Edition
    <span>{{ date }}</span>
  </div>

  <button class="toggle-btn" onclick="toggleOverlays()">Hide Overlays</button>

  <button class="nav-btn prev-btn" onclick="changePage(-1)">‹</button>
  <button class="nav-btn next-btn" onclick="changePage(1)">›</button>

  <div class="carousel-wrapper">
    {% for page in pages %}
    <div class="page-slide{% if loop.first %} active{% endif %}" id="page-{{ page.page_num }}">
      <div class="page-container">
        <img src="images/page_{{ page.page_num }}.jpg" alt="Page {{ page.page_num }}">

        {% for art in page.articles %}
        {% if art.headline_en or art.headline_hi %}
        <div class="article-overlay"
             style="top:{{ '%.3f'|format(art.top_pct) }}%; left:{{ '%.3f'|format(art.left_pct) }}%; width:{{ '%.3f'|format(art.width_pct) }}%; height:{{ '%.3f'|format(art.height_pct) }}%;"
             onclick="window.open('{{ art.article_url }}', '_blank')"
             data-headline="{{ (art.headline_en or art.headline_hi)|e }}"
             data-body="{{ (art.body_en or art.body_hi)|e }}">
          <div class="article-headline"></div>
          <div class="article-body"></div>
        </div>
        {% endif %}
        {% endfor %}
      </div>
    </div>
    {% endfor %}
  </div>

  <div class="page-label" id="pageLabel">Page 1 of {{ pages|length }}</div>

  <div class="page-indicator">
    <div class="page-dots">
      {% for page in pages %}
      <div class="page-dot{% if loop.first %} active{% endif %}"
           onclick="goToPage({{ loop.index0 }})"></div>
      {% endfor %}
    </div>
  </div>

  <script>
    // ── Carousel navigation ──
    let currentPage = 0;
    const slides = document.querySelectorAll('.page-slide');
    const dots = document.querySelectorAll('.page-dot');
    const totalPages = slides.length;
    const pageLabel = document.getElementById('pageLabel');

    function changePage(delta) {
      currentPage = (currentPage + delta + totalPages) % totalPages;
      updateCarousel();
    }

    function goToPage(idx) {
      currentPage = idx;
      updateCarousel();
    }

    function updateCarousel() {
      slides.forEach((s, i) => s.classList.toggle('active', i === currentPage));
      dots.forEach((d, i) => d.classList.toggle('active', i === currentPage));
      pageLabel.textContent = `Page ${currentPage + 1} of ${totalPages}`;
      requestAnimationFrame(() => fillOverlays(slides[currentPage]));
    }

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowRight' || e.key === 'ArrowDown') changePage(1);
      if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') changePage(-1);
    });

    // ── Toggle overlays visibility ──
    let overlaysVisible = true;
    function toggleOverlays() {
      overlaysVisible = !overlaysVisible;
      document.querySelectorAll('.page-container').forEach(c => {
        c.classList.toggle('overlays-hidden', !overlaysVisible);
      });
      document.querySelector('.toggle-btn').textContent =
        overlaysVisible ? 'Hide Overlays' : 'Show Overlays';
    }

    // ── Auto-fit text into overlay boxes ──
    function fillOverlays(slideEl) {
      if (!slideEl) return;
      slideEl.querySelectorAll('.article-overlay').forEach(overlay => {
        const headlineEl = overlay.querySelector('.article-headline');
        const bodyEl = overlay.querySelector('.article-body');

        // Skip if already filled
        if (headlineEl.textContent) return;

        const headline = overlay.dataset.headline || '';
        const body = overlay.dataset.body || '';

        const boxW = overlay.offsetWidth;
        const boxH = overlay.offsetHeight;
        const area = boxW * boxH;

        // Dynamic font sizing based on box area
        let headlineSize, bodySize;
        if (area > 300000) {
          headlineSize = 17; bodySize = 13;
        } else if (area > 150000) {
          headlineSize = 15; bodySize = 12;
        } else if (area > 80000) {
          headlineSize = 13; bodySize = 11;
        } else if (area > 30000) {
          headlineSize = 11; bodySize = 10;
        } else {
          headlineSize = 10; bodySize = 9;
        }

        headlineEl.style.fontSize = headlineSize + 'px';
        bodyEl.style.fontSize = bodySize + 'px';

        headlineEl.textContent = headline;

        // Calculate remaining height for body
        const usedHeight = headlineEl.offsetHeight + 6;
        const remainingHeight = boxH - usedHeight - 14;

        if (remainingHeight > 20 && body) {
          bodyEl.style.maxHeight = remainingHeight + 'px';
          bodyEl.textContent = body;
        }
      });
    }

    // Fill overlays for the initial page
    fillOverlays(slides[0]);
  </script>

</body>
</html>
